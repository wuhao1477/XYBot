{
    "configurations": [
        {
          "type": "python",
          "request": "launch",
          "name": "Launch start.py",
          "program": "${workspaceFolder}/start.py",
          "console": "internalConsole",
          "redirectOutput": true,
          "envFile": "${workspaceFolder}/.env"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "programPath",
            "description": "Path to the Python program to debug (e.g., start.py)"
        }
    ]
}